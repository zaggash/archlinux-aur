# Maintainer: Ã©clairevoyant

pkgname=bitwarden-cli-bin
pkgver=2025.10.0 # renovate: datasource=github-tags depName=bitwarden/clients extractVersion=cli-v(?<version>.*) versioning=semver
pkgrel=1
pkgdesc='Bitwarden Command-line Interface'
arch=(x86_64)
url='https://github.com/bitwarden/clients'
license=(GPL3)
depends=(gcc-libs glibc)
provides=(bitwarden-cli)
conflicts=(bitwarden-cli)
options=('!strip')
source=("$url/releases/download/cli-v$pkgver/"bw-linux-${pkgver}.zip)

prepare() {
  curl -sL \
    -H "Accept: application/vnd.github+json" \
    -H "X-GitHub-Api-Version: 2022-11-28" \
    "https://api.github.com/repos/bitwarden/clients/releases/tags/cli-v${pkgver}" |\
  jq --arg PKGVER "$pkgver" \
    -r '.assets[] | select(.name == "bw-linux-\($PKGVER).zip") | .digest' |\
  cut -d ':' -f 2 | tr -d "\n" > bw-linux-sha256-$pkgver.txt

  echo -n " bw-linux-${pkgver}.zip" >> bw-linux-sha256-$pkgver.txt
	sha256sum -c bw-linux-sha256-$pkgver.txt
}

package() {
	install -Dm755 bw -t "$pkgdir/usr/bin/"
}
